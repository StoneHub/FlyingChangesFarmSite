{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "serve",
      "command": "firebase",
      "args": ["serve"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Local server:"
        }
      }
    }
  ]
}
